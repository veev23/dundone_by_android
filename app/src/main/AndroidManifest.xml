<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dundone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Singleton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".character.CharacterSearchResultActivity"></activity>
        <activity android:name=".character.CharacterSearchActivity" />
        <activity
            android:name=".auction.ItemSearchResultActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".character.CharacterListActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".auction.AuctionSearchActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>