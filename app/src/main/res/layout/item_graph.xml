<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/radius20_white_rect"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/rainforce_mini"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/rainforce_level"
            tools:text="12ê°•"
            android:layout_gravity="center_vertical"
            android:textSize="28sp"
            android:textColor="@color/colorButtonBackgorund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/radius15_grey_rect"
            android:textColor="@color/colorButtonBackgorund"
            tools:text="80%"
            android:id="@+id/rainforce_percent"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <FrameLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/fragment_graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>