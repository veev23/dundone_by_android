<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Button -->
    <style name="ButtonSize">
        <item name="android:layout_width">39dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="AuctionButton" parent="@style/ButtonSize">
        <item name="android:background">@drawable/radius_empty_rect_auction</item>
    </style>
    <style name="CharacterButton" parent="@style/ButtonSize">
        <item name="android:background">@drawable/radius_empty_rect_character</item>
    </style>
    <style name="ButtonImageSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="FLoatButton">
        <item name="android:background">@drawable/button_float_char</item>
    </style>
</resources>
